@model List<CategoryListModel>
@{
    Layout = "_Layout";
}

@{
    if (Model?.Count > 0)
    {
        <div class="text-end">
        <a asp-action="Create" asp-asp-controller="Category" class="btn btn-primary btn-sm">Create Category</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Definition</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Definition</td>
                        <td>
                        <a asp-action="Remove" asp-asp-controller="Category" class="btn btn-danger btn-sm" asp-route-id="@category.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-danger">
            No records found.
        </div>
    }
}

